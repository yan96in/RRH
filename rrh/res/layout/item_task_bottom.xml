<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <View
        android:id="@+id/v_divide"
        style="@style/cut_line_horizontal"
        android:layout_marginTop="5dp"
        android:background="@drawable/icon_dotted_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp" >

        <TextView
            android:id="@+id/tv_enddate"
            style="@style/text_frame"
            android:singleLine="false"
            android:text="剩余时间"
            android:textColor="@color/black"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_share"
            style="@style/text_base"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:drawableLeft="@drawable/icon_share"
            android:drawablePadding="5dp"
            android:padding="15dp"
            android:text="分享"
            android:textColor="@color/gray"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_select_reciver"
            style="@style/btn_common_style"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_task_hold_selector"
            android:text="选择接单人"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_cancel_order"
            style="@style/btn_common_style"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_task_hold_selector"
            android:text="退出接单"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_redit"
            style="@style/btn_common_style"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="重新编辑"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/ll_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="right" >

            <Button
                android:id="@+id/btn_delay_pay"
                style="@style/btn_common_style"
                android:background="@drawable/btn_delay_pay_selector"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="验收不合格"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_affirm_finish"
                style="@style/btn_common_style"
                android:layout_marginTop="15dp"
                android:background="@drawable/btn_confirm_tast_selector"
                android:text="工作确认完成"
                android:visibility="gone" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/btn_contact_employer"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_select_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_delay_pay_selector"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="选TA"
            android:textColor="@color/white"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_modify_offer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_delay_pay_selector"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="修改报价"
            android:textColor="@color/white"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_hold_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/icon_hold_bg"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="待定中"
            android:textColor="@color/orange_little"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_grade_score"
            style="@style/btn_common_style"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_delay_pay_selector"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="评论雇主"
            android:visibility="gone" />
    </RelativeLayout>

    <View
        android:id="@+id/v2_divide"
        style="@style/cut_line_horizontal"
        android:layout_marginTop="5dp"
        android:background="@drawable/icon_dotted_line" />

    <TextView
        android:id="@+id/tv_leave_message"
        style="@style/text_common"
        android:layout_gravity="center_vertical"
        android:padding="10dp"
        android:singleLine="false"
        android:textSize="14.5sp" />

</LinearLayout>