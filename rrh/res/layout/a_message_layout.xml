<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/common_page_bg"
     >
    
    <include layout="@layout/title_bar"/>
	
   	<RelativeLayout
   	    android:layout_width="match_parent"
   	    android:layout_height="match_parent"
   	     android:layout_marginTop="10dp"
   	     >

   	    <ImageView
   	        android:id="@+id/iv_no_data"
   	        android:layout_width="wrap_content"
   	        android:layout_height="wrap_content"
   	        android:layout_centerInParent="true"
   	        android:scaleType="center"
   	        android:src="@drawable/bg_no_content"
   	        android:visibility="gone" />

   	   <com.cbkj.rrh.view.xlistview.XListView
		    android:id="@+id/xlv_spaceless"
		    style="@style/common_listview"
		    android:layout_height="wrap_content"
		    android:divider="@drawable/img_user_center_x_line"
		    android:dividerHeight="1px" 
		     android:listSelector="@drawable/selector_listview_select"
		    />
   	</RelativeLayout>
    
</LinearLayout>
