<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/img_user_center_bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_select_title"
        style="@style/text_select_bottom"
        android:text="标  题"
        android:textColor="#a6a6a6"
        android:textSize="22.5sp" />

    <View style="@style/cut_line_horizontal" />

    <TextView
        android:id="@+id/tv_select_one"
        style="@style/text_select_bottom"
        android:visibility="gone"
        android:text="标  题" />

    <View 
        android:id="@+id/v_cut_one"
        style="@style/cut_line_horizontal"
        android:visibility="gone"
         />

    <TextView
        android:id="@+id/tv_select_ok"
        style="@style/text_select_bottom"
        android:textColor="#fa5a56"
        android:text="标  题" />

    <View style="@style/cut_line_horizontal" />

    <TextView
        android:id="@+id/tv_select_cancel"
        style="@style/text_select_bottom"
        android:text="取  消" />

</LinearLayout>