<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:descendantFocusability="blocksDescendants"
    android:padding="10dp" >

    <ImageView
        android:id="@+id/iv_pay_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/icon_pay_alipay" />

    <TextView
        android:id="@+id/tv_pay_title"
        style="@style/text_base"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/iv_pay_icon"
        android:layout_alignTop="@id/iv_pay_icon"
        android:text="支付宝"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_pay_sub_title"
        style="@style/text_base"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_pay_icon"
        android:layout_toRightOf="@+id/iv_pay_icon"
        android:text="推荐支付宝用户"
        android:textColor="@color/gray"
        android:textSize="12sp" />

    <RadioButton
        android:id="@+id/rb_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:button="@drawable/bg_report_selector"
         />

</RelativeLayout>