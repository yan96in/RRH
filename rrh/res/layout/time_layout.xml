<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@drawable/wheel_layout_bg" >

    <LinearLayout
        android:id="@+id/timePicker1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center"
        android:orientation="horizontal"
        android:padding="10dp">
     <com.cbkj.rrh.widget.wheel.WheelView
			android:id="@+id/year" 
			android:layout_height="wrap_content"
			android:layout_width="0dp"
			android:layout_weight="1"
			 />
		<com.cbkj.rrh.widget.wheel.WheelView
			android:id="@+id/month" 
			android:layout_height="wrap_content"
				android:layout_width="0dp"
			android:layout_weight="1" />
		<com.cbkj.rrh.widget.wheel.WheelView
			android:id="@+id/day"
			 android:layout_height="wrap_content"
				android:layout_width="0dp"
			android:layout_weight="1"/>
<!-- 		<com.xia.datetime.wheelview.WheelView
			android:id="@+id/hour" android:layout_height="wrap_content"
			android:layout_width="40dip" />
		<com.xia.datetime.wheelview.WheelView
			android:id="@+id/mins" android:layout_height="wrap_content"
			android:layout_width="40dip" /> -->
      
    </LinearLayout>

</RelativeLayout>