<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="45dp"
    android:layout_marginRight="45dp"
    android:layout_marginTop="15dp"
    android:orientation="vertical" >
    
    <ImageView 
        android:id="@+id/iv_bound_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_weibo_selector"
        />
    
    <TextView 
        android:id="@+id/tv_bound_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12.5dp"
        android:layout_toRightOf="@id/iv_bound_icon"
        android:text="新浪微博"
		android:layout_centerVertical="true"
		android:textSize="18sp"
        />
    
    <TextView 
        android:id="@+id/tv_bound_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:textColor="@color/color_home_radiobutton_text"
		android:text="点击绑定"
		android:layout_centerVertical="true"
		android:textSize="18sp"
        />
    

</RelativeLayout>
