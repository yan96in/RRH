<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--  -->
    <style name="layout_edittext_content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@drawable/img_user_center_bg</item>
        
    </style>
    
    <!-- EditText样式 -->
    <style name="edittext_parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center_vertical</item>
        
    </style>
    
    <style name="edittext_number" parent="edittext_parent">
        <item name="android:inputType">number</item>
    </style>
    
    <style name="edittext_pwd" parent="edittext_parent">
        <item name="android:inputType">textPassword</item>
    </style>
    <style name="edittext_normal" parent="edittext_parent">
        <item name="android:layout_height">45dp</item>
        <item name="android:background">@drawable/img_user_center_bg</item>
    </style>
    
    <style name="edittext_normal_nobg" parent="edittext_parent">
        <item name="android:layout_height">45dp</item>
    </style>
    
    <!-- text样式 -->
    <style name="text_base">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>
    
    <style name="text_content" parent="text_base">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">#5c5c5c</item>
    </style>
    
    <style name="text_orange" parent="text_base">
        <item name="android:textColor">@color/orange_little</item>
    </style>

    <!-- 图片样式 -->
    
    <style name="me_action_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">35dp</item>
    </style>
    
    <style name="tip_red">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
<!--         <item name="android:background">@drawable/unread_count_bg</item> -->
        <item name="android:background">@drawable/icon_remenber_tip</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:clickable">false</item>
        <item name="android:textSize">13sp</item>
        <item name="android:paddingLeft">3dp</item>
        <item name="android:paddingRight">3dp</item>
        <item name="android:visibility">gone</item>
    </style>
    
    
    
     <style name="btn_common_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/btn_common_selector</item>
         <item name="android:paddingLeft">15dp</item>
         <item name="android:paddingRight">15dp</item>
         <item name="android:paddingTop">7.5dp</item>
         <item name="android:paddingBottom">7.5dp</item>
    </style>
    
     <!-- 第三方的按钮样式 -->
    <style name="btn_third_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>
    
    <!-- 对话框 -->
      <style name="dialog_alert" parent="@android:Theme.Dialog">
		<item name="android:windowFrame">@null</item><!-- 边框 -->  
        <item name="android:windowIsFloating">true</item><!-- 是否浮现在activity之上 -->  
        <item name="android:windowIsTranslucent">true</item><!-- 半透明 -->  
        <item name="android:windowNoTitle">true</item><!-- 无标题 -->  
        <item name="android:backgroundDimEnabled">true</item><!-- 模糊 -->  
		<item name="android:windowBackground"> @android:color/transparent </item>
    </style>
    
      
      <!-- 单选按钮的样式 -->
      <style name="radioButton_style">
          <item name="android:layout_width">0dp</item>
          <item name="android:layout_weight">1</item>
          <item name="android:layout_height">wrap_content</item>
          <item name="android:background">@null</item>
          <item name="android:button">@drawable/bg_sex_selector</item>
          <item name="android:textColor">@color/gray</item>
          <item name="android:singleLine">true</item>
      </style>
      
      <style name="radioButton_style_2" parent="radioButton_style">
          <item name="android:layout_width">wrap_content</item>
          <item name="android:layout_height">wrap_content</item>
          <item name="android:drawablePadding">15dp</item>
          <item name="android:layout_marginTop">40dp</item>
          <item name="android:layout_marginLeft">50dp</item>
      </style>
    
      <style name="text_name" parent="text_content">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/blue</item>
    </style>
    
     <style name="text_date" parent="text_name">
       <item name="android:textColor">@color/gray</item>
    </style>
    
    
    <!-- 用户图像 -->
    <style name="user_img_big">
       <item name = "android:layout_width">90dp</item>
       <item name = "android:layout_height">90dp</item>
       <item name = "android:scaleType">fitCenter</item>
       <item name = "android:background">@drawable/bg_img_load</item>
    </style>
    
    
    <style name="linear_edit_area">
       <item name = "android:layout_width">match_parent</item>
       <item name = "android:layout_height">wrap_content</item>
       <item name = "android:orientation">horizontal</item>
       <item name = "android:background">@drawable/img_user_center_bg</item>
       <item name = "android:gravity">center_vertical</item>
    </style>
    
    <style name="linear_edit_area_row">
       <item name = "android:layout_width">match_parent</item>
       <item name = "android:layout_height">0dp</item>
       <item name="android:layout_weight">1</item>
       <item name="android:paddingLeft">20dp</item>
       <item name = "android:orientation">horizontal</item>
    </style>
    
    <style name="linear_text_area_row">
       <item name = "android:layout_width">match_parent</item>
       <item name = "android:layout_height">wrap_content</item>
       <item name = "android:orientation">horizontal</item>
       <item name = "android:layout_marginTop">10dp</item>
    </style>
    
    <style name="linear_text_area_row_content">
       <item name = "android:layout_width">match_parent</item>
       <item name = "android:layout_height">wrap_content</item>
       <item name="android:textColor">#5c5c5c</item>
       <item name="android:textSize">16sp</item>
    </style>
    
    <!-- 展示文本 -->
      <style name="task_show_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#5c5c5c</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical</item>
        
    </style>
    
    <!-- 发任务的标题 -->
    <style name="task_send_left_title" parent="task_show_content">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:drawableLeft">@drawable/icon_need_input</item>
    </style>
    
      <style name="task_trade_left_title" parent="task_send_left_title">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">#3a3737</item>
        <item name="android:drawableLeft">@null</item>
         <item name="android:textSize">18sp</item>
    </style>
    
        <!-- 发任务的标题 -->
    <style name="task_send_right_content">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@null</item>
        <item name="android:paddingRight">10dp</item>
    </style>
            <!-- 发任务的标题 -->
    <style name="task_trade_right_title" parent="task_send_right_content">
        <item name="android:layout_height">wrap_content</item>
         <item name="android:minHeight">45dp</item>
        <item name="android:textColor">#919191</item>
        <item name="android:textSize">18sp</item>
    </style>
    
</resources>
