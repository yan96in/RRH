<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 登录的东西 -->
    <string-array name="id_type_work">
        <item> 计算机/互联网/通信/电子</item>
        <item> 销售/客服/技术支持</item>
        <item> 会计/金融/银行/保险</item>
        <item> 生产/营运/采购/物流</item>
        <item> 生物/制药/医疗/护理</item>
        <item> 广告/市场/媒体/艺术</item>
        <item> 建筑/房地产</item>
        <item> 人事/行政/高级管理</item>
        <item> 咨询/法律/教育/科研</item>
        <item> 服务业</item>
        <item> 公务员/翻译/其他</item>
    </string-array>

    <declare-styleable name="SwipeBackLayout">
        <attr name="edge_size" format="dimension" />
        <attr name="edge_flag">
            <enum name="left" value="0" />
            <enum name="right" value="1" />
            <enum name="bottom" value="2" />
            <enum name="all" value="3" />
        </attr>
        <attr name="shadow_left" format="reference" />
        <attr name="shadow_right" format="reference" />
        <attr name="shadow_bottom" format="reference" />
    </declare-styleable>

    <attr name="SwipeBackLayoutStyle" format="reference" />

    <string-array name="content_action">
        <item name="1">关注</item>
        <item name="2">收藏</item>
        <item name="3">举报</item>
        <item name="4">取消</item>
    </string-array>
    <string-array name="reply_action">
        <item name="1">回复</item>
        <item name="2">举报</item>
        <item name="3">取消</item>
    </string-array>

    <declare-styleable name="StaggeredGridView">
        <attr name="drawSelectorOnTop" format="boolean" />
        <attr name="numColumns" format="integer" />
        <attr name="itemMargin" format="dimension" />
    </declare-styleable>
    <declare-styleable name="ViewPagerIndicator">
        <attr name="vpiCirclePageIndicatorStyle" format="reference" />
        <attr name="vpiIconPageIndicatorStyle" format="reference" />
        <attr name="vpiLinePageIndicatorStyle" format="reference" />
        <attr name="vpiTitlePageIndicatorStyle" format="reference" />
        <attr name="vpiTabPageIndicatorStyle" format="reference" />
        <attr name="vpiUnderlinePageIndicatorStyle" format="reference" />
    </declare-styleable>
    <!-- 下拉刷新控件参数 -->
    <declare-styleable name="PullToRefresh">

        <!-- 头部线条颜色 -->
        <attr name="headerDivider" format="reference|color" />
        <!-- 头部线条高度 -->
        <attr name="headerDividerHeight" format="reference|dimension" />
        <attr name="ptrAdapterViewBackground" format="reference|color" />
        <attr name="ptrHeaderBackground" format="reference|color" />
        <attr name="ptrHeaderTextColor" format="reference|color" />
        <attr name="ptrHeaderSubTextColor" format="reference|color" />
        <!-- 三种下拉模式 -->
        <attr name="ptrMode">
            <flag name="pullDownFromTop" value="0x1" />
            <flag name="pullUpFromBottom" value="0x2" />
            <flag name="both" value="0x3" />
        </attr>
        <attr name="ptrShowIndicator" format="reference|boolean" />
        <!-- 是否显示底部view，不显示时有回弹效果 -->
        <attr name="isShowFooter" format="reference|boolean" />
        <!-- 是否显示头部view，不显示时有回弹效果 -->
        <attr name="isShowHeader" format="reference|boolean" />
        <attr name="ptrDrawable" format="reference" />
    </declare-styleable>
    <declare-styleable name="SlidingMenu">
        <attr name="mode">
            <enum name="left" value="0" />
            <enum name="right" value="1" />
        </attr>
        <attr name="viewAbove" format="reference" />
        <attr name="viewBehind" format="reference" />
        <attr name="behindOffset" format="dimension" />
        <attr name="behindWidth" format="dimension" />
        <attr name="behindScrollScale" format="float" />
        <attr name="touchModeAbove">
            <enum name="margin" value="0" />
            <enum name="fullscreen" value="1" />
        </attr>
        <attr name="touchModeBehind">
            <enum name="margin" value="0" />
            <enum name="fullscreen" value="1" />
        </attr>
        <attr name="shadowDrawable" format="reference" />
        <attr name="shadowWidth" format="dimension" />
        <attr name="fadeEnabled" format="boolean" />
        <attr name="fadeDegree" format="float" />
        <attr name="selectorEnabled" format="boolean" />
        <attr name="selectorDrawable" format="reference" />
    </declare-styleable>
    <declare-styleable name="swipelistviewstyle">
        <attr name="right_width" format="dimension"></attr>
    </declare-styleable>

    <string-array name="phtot_select">
        <item name="1">照相</item>
        <item name="2">选择图片</item>
        <item name="3">取消</item>
    </string-array>

    <!-- 操作的小控件 -->
    <declare-styleable name="actionBar">
        <attr name="img" format="reference" />
        <attr name="text" format="reference" />
    </declare-styleable>

    <!-- 消息提示的小图标 -->
    <declare-styleable name="markbar">
        <attr name="markname" format="reference" />
        <attr name="markcount" format="reference" />
    </declare-styleable>

    <!-- 消息提示的小图标 -->
    <declare-styleable name="markimgbar">
        <attr name="mibicon" format="reference" />
        <attr name="mibkname" format="reference" />
        <attr name="mibkcount" format="reference" />
    </declare-styleable>

    <!-- 操作的小控件 -->
    <declare-styleable name="markRadionButton">
        <attr name="txtTitle" format="reference" />
        <attr name="txtCount" format="reference" />
    </declare-styleable>

    <!-- 圆形图片控件 -->
    <declare-styleable name="circleImg">
        <attr name="border_thickness" format="dimension" />
        <attr name="border_inside_color" format="reference" />
        <attr name="border_outside_color" format="reference" />
    </declare-styleable>

    <!-- 选中控件 -->
    <declare-styleable name="selectView">
        <attr name="select_title" format="reference" />
        <attr name="select_img" format="reference" />
        <attr name="select_tag" format="reference" />
    </declare-styleable>

    <!-- 选中控件 -->
    <declare-styleable name="my_select_view">
        <attr name="text_title" format="reference" />
        <attr name="text_content" format="reference" />
        <attr name="img_next" format="reference" />
        <attr name="img_title" format="reference" />
    </declare-styleable>
    
    <declare-styleable name="thirdbar">
        <attr name="t_text" format="reference" />
        <attr name="t_img" format="reference" />
    </declare-styleable>
    
    <declare-styleable name="boundbar">
        <attr name="b_text" format="reference" />
        <attr name="b_img" format="reference" />
    </declare-styleable>
    <!-- 支付的按钮 -->
    <declare-styleable name="radio_pay_view">
        <attr name="p_img" format="reference" />
        <attr name="p_title" format="reference" />
        <attr name="p_sub_title" format="reference" />
    </declare-styleable>

</resources>